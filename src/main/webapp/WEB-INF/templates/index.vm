                    // 表单验证
                    $(function () {
                    // 强密码验证
jQuery.validator.addMethod("isStrongPwd", function(value, element) {
    var pwd = /((?=.*\d)(?=.*[A-Za-z])(?=.*\W).{8,20})/;
    return this.optional(element)||pwd.test(value);
}, "密码为8-20位，必须包含字母，数字和特殊字符");
                        var form = $("#login_form");
                        form.validate({
                            rules: {
