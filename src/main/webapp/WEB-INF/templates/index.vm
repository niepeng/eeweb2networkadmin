                <script>
                    // 提交表单，进行用户名密码签名签名
                    function submitForm() {
                        var ln = $("#J_loginname").val();
                        var pd = $("#j_password").val();
                        var sign = md5(ln+pd);
                        $("#sign").val(sign);
                        $("#login_form").submit();
                    }


